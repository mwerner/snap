<div id="chat">
  <%- @users.each do |user| %>
    <div class="story-row row">
      <div class="col-xs-2"><i class="fa fa-user-circle" aria-hidden="true"></i></div>
      <div class="col-xs-8"><%= user.username %></div>
      <div class="col-xs-2"><a class="remove-friend" href="/unfollow/<%= user.username %>"><i class="fa fa-times" aria-hidden="true"></i></a></div>

    </div>
  <% end %>

  <div class="container" style="margin-top: 10px;">
    <form id="login-form" action="/follow" method="POST">
      <div class="form-group">
        <input type="text" name="username" class="form-control" id="login-username" placeholder="username">
      </div>

      <div class="form-group" style="text-align: center;">
        <button type="submit" class="btn btn-primary">Add Friend</button>
      </div>
    </form>
  </div>
</div>
